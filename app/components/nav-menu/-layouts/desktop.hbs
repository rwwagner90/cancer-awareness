<hbox justify="center">
  <box fill xs="11" sm="9" md="8">
    <hbox>{{svg-jar 'ember' class="logo"}}</hbox>
    <hbox class="subtext">The framework for creating ambitious applications.</hbox>
    <grid class="site-nav">
      <hbox xs="7" md="6">
        {{#links-with-follower
          activeSelector="centered.active:not(centered.ember-transitioning-out), centered.ember-transitioning-in"
          containerTagName="hbox"
          followerAnimationDuration=200
          linkTagName="centered"
          tagName='vbox'}}
          {{link-to 'Home' 'index' class="nav-link" tagName='centered'}}
          {{link-to 'Gallery' 'gallery' class="nav-link" tagName='centered'}}
          {{link-to 'Shop' 'shop' class="nav-link" tagName='centered'}}
        {{/links-with-follower}}
      </hbox>
    </grid>
    {{yield}}
  </box>
</hbox>
